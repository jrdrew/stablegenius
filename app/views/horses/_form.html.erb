<%= form_with(model: horse, local: true, multipart: true) do |form| %>
  <% if horse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(horse.errors.count, "error") %> prohibited this horse from being saved:</h2>

      <ul>
      <% horse.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :horse_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :breed %>
    <%= form.text_field :breed, id: :horse_breed, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reg_number %>
    <%= form.text_field :reg_number, id: :horse_reg_number, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :owner %>
    <%= form.text_field :owner, id: :horse_owner, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :job %>
    <%= form.text_field :job, id: :horse_job, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :microchip %>
    <%= form.text_field :microchip, id: :horse_microchip, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :usef, :class => "text-uppercase" %>
    <%= form.text_field :usef, id: :horse_usef, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :usdf, :class => "text-uppercase" %>
    <%= form.text_field :usof, id: :horse_usof, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :neda, :class => "text-uppercase" %>
    <%= form.text_field :neda, id: :horse_neda, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dob %>
    <%= form.date_select :dob, id: :horse_dob, start_year: 1980, end_year: 2018, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, id: :avatar, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
